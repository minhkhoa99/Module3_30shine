<!DOCTYPE html>
<!--=== Coding by CodingLab | www.codinglabweb.com === -->
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="/dashboardAdmin.css">

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <title>Admin Dashboard</title>
</head>

<body>
    <nav class="nav">
        <div class="logo-name">
            <div class="logo-image">
                <img src="https://vnpayqr.vn/wp-content/uploads/2020/08/30shine-logo.png" alt="">
            </div>

            <span class="logo_name">30ShineAdmin</span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="/admin/dashboard">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Trang chủ</span>
                    </a></li>
                <li><a href="/admin/quan-ly-dat-lich">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Quản lý đặt lịch</span>
                    </a></li>
                <li><a href="/admin/san-pham">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Quản lý sản phẩm</span>
                    </a></li>
                <li><a href="/admin/hanh-trinh-toa-sang">
                        <i class="uil uil-thumbs-up"></i>
                        <span class="link-name">Hành trình toả sáng</span>
                    </a></li>

            </ul>

            <ul class="logout-mode">
                <li><a href="/admin/signin">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a></li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-moon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>

            <img src="images/profile.jpg" alt="">
        </div>

        <div class="dash-content">

            <form class="row g-3" method="POST" action="/admin/store">
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">shopid</label>
                    <input type="text" class="form-control" name="userid" id="inputEmail4">
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Vị trí</label>
                    <input type="text" class="form-control" name="location" id="inputPassword4">
                </div>
                <div class="col-6">
                    <label for="inputAddress" class="form-label">ImageUrl</label>
                    <input type="url" class="form-control" name="imageUrl" id="inputAddress" placeholder="Nhập url">
                </div>
                <div class="col-6">
                    <label for="inputAddress2" class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" name="address" id="inputAddress2"
                        placeholder="Apartment, studio, or floor">
                </div>
                <div class="col-md-6">
                    <label for="inputCity" class="form-label">Mô tả</label>
                    <input type="text" class="form-control" name="description" placeholder="Nhập mô tả" id="inputCity">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Thêm mới cửa hàng</button>
                </div>
            </form>

            <div class="activity">
                <div class="title">
                    <i class="uil uil-clock-three"></i>
                    <span class="text">Quản lý cửa hàng</span>
                </div>

                <div class="activity-data">
                    <div class="data names">
                        <span class="data-title">id</span>

                        <% for(let i=0;i<shopList.length;i++){ %>
                            <span class="data-list">
                                <%=shopList[i].userid%>
                            </span>

                            <% } %>
                    </div>
                    <div class="data email">
                        <span class="data-title">Vị trí</span>
                        <% for(let i=0;i<shopList.length;i++){ %>
                            <span class="data-list">
                                <%=shopList[i].location%>
                            </span>

                            <% } %>
                    </div>
                    <div class="data email">
                        <span class="data-title">Địa chỉ</span>
                        <% for(let i=0;i<shopList.length;i++){ %>
                            <span class="data-list">
                                <%=shopList[i].address%>
                            </span>

                            <% } %>

                    </div>
                    <div class="data joined">
                        <span class="data-title">Hình ảnh</span>
                        <% for(let i=0;i<shopList.length;i++){ %>
                            <span class="data-list">
                                <%=(shopList[i].imageUrl).toString().substring(0,31)%>
                            </span>

                            <% } %>


                    </div>
                    <div class="data-btn">
                        <div class="data joined">
                            <span class="data-title">Mô tả</span>
                            <% for(let i=0;i<shopList.length;i++){ %>
                                <span class="data-list">
                                    <%=shopList[i].description%>
                                </span>

                                <% } %>


                        </div>
                        <div class="data type">
                            <span class="data-title">Option</span>
                            <div class="flex-btn">
                                <span class="data-list">
                                    <button class="delete-btn" id="deletebtn">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </button>
                                </span>
                                <span class="data-list">
                                    <button class="delete-btn" id="updatebtn">
                                        <ion-icon name="settings-outline"></ion-icon>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="/jsAdmin/updataProduct.js"></script>
</body>

</html>